<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MenuMapper">

	<resultMap type="Menu" id="menuResultMap">
		<id column="MENU_ID" property="MENU_ID"/>
		<result column="MENU_NAME" property="MENU_NAME"/>
		<result column="MENU_URL" property="MENU_URL"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
		<result column="MENU_ORDER" property="MENU_ORDER"/>
		<result column="MENU_ICON" property="MENU_ICON"/>
		<result column="MENU_TYPE" property="MENU_TYPE"/>
	</resultMap>
	
	<!-- ztree -->
	<resultMap type="Menu" id="menuZtreeResultMap">
	<id column="MENU_ID" property="MENU_ID"/>
	<result column="MENU_NAME" property="MENU_NAME"/>
	<result column="MENU_URL" property="MENU_URL"/>
	<result column="PARENT_ID" property="PARENT_ID"/>
	<result column="MENU_ORDER" property="MENU_ORDER"/>
	<result column="MENU_ICON" property="MENU_ICON"/>
	<result column="MENU_TYPE" property="MENU_TYPE"/>
	<result column="target" property="target"></result>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		SYS_MENU
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MENU_ID,
 		MENU_NAME,
 		MENU_URL,
 		PARENT_ID,
 		MENU_ICON,
 		MENU_ORDER,
 		MENU_STATUS,
 		MENU_TYPE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MENU_ID},
 		#{MENU_NAME},
 		#{MENU_URL},
 		#{PARENT_ID},
 		#{MENU_ICON},
 		#{MENU_ORDER},
 		#{MENU_STATUS},
 		#{MENU_TYPE}
	</sql>
	
	<!--通过ID获取其子一级菜单 -->
	<select id="listSubMenuByParentId" parameterType="String" resultMap="menuResultMap">
		select  
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where PARENT_ID = #{parentId} order by MENU_ORDER 
	</select>
	
	<!--通过菜单ID获取数据 -->
	<select id="getMenuById" parameterType="pd" resultType="pd">
		select  
			<include refid="Field"></include>
		 from 
			<include refid="tableName"></include>
		 where MENU_ID=#{MENU_ID}
	</select>
	
	<!--新增 -->
	<insert id="insertMenu" parameterType="Menu">
		insert into 
			<include refid="tableName"></include> 
		(
			<include refid="Field"></include>
		) values (
			<include refid="FieldValue"></include>
		)
	</insert>
	
	<!--删除菜单-->
	<delete id="deleteMenuById" parameterType="String">
		delete from SYS_MENU
		where
		<choose>
			<!-- mysql 时调用自定义函数 -->
		 	<when test="DATABASE_TYPE == 1">
		 		FIND_IN_SET(MENU_ID, getChild(#{MENU_ID},0));
		 	</when>
		 	<otherwise>
				MENU_ID in ( 
					select MENU_ID  from sys_menu START WITH MENU_ID =#{MENU_ID} CONNECT BY PRIOR menu_id=PARENT_ID
				)
			</otherwise>
		</choose>
	</delete>
	
	<!--删除菜单功能-->
	<delete id="deleteMenuFunById" parameterType="pd">
		delete from  SYS_MENU_FUN
		where
		<choose>
			<!-- mysql 时调用自定义函数 -->
		 	<when test="DATABASE_TYPE == 1">
		 		FIND_IN_SET(MENU_ID, getChild(#{MENU_ID},0));
		 	</when>
		 	<otherwise>
				MENU_ID in ( 
					select MENU_ID  from sys_menu START WITH MENU_ID =#{MENU_ID} CONNECT BY PRIOR menu_id=PARENT_ID
				)
			</otherwise>
		</choose>
	</delete>
	
		<!--根据菜单ID删除角色功能关系-->
	<delete id="deleteRoleMfById" parameterType="pd">
		delete from  ROLE_MF_RELA 
		where MF_ID IN (
			SELECT MF_ID FROM SYS_MENU_FUN 
				where 
				<choose>
					<!-- mysql 时调用自定义函数 -->
				 	<when test="DATABASE_TYPE == 1">
				 		FIND_IN_SET(MENU_ID, getChild(#{MENU_ID},0));
				 	</when>
				 	<otherwise>
						MENU_ID in ( 
							select MENU_ID  from sys_menu START WITH MENU_ID =#{MENU_ID} CONNECT BY PRIOR menu_id=PARENT_ID
						)
					</otherwise>
				</choose>
		 )
	</delete>
	
	<!--编辑 -->
	<update id="updateMenu" parameterType="Menu">
		update 
		<include refid="tableName"></include> 
		set 
			MENU_NAME =#{MENU_NAME},
			MENU_URL  =#{MENU_URL} ,
			MENU_ORDER=#{MENU_ORDER},
			MENU_STATUS=#{MENU_STATUS},
			MENU_TYPE =#{MENU_TYPE}
		where 
			MENU_ID=#{MENU_ID}
	</update>

	<!--保存菜单图标  -->
	<update id="editicon" parameterType="Menu">
		update 
		<include refid="tableName"></include> 
		set 
			MENU_ICON=#{MENU_ICON}
		where
			MENU_ID=#{MENU_ID}
	</update>
	
	
	<select id="checkMenuUsed" parameterType="String" resultType="Integer" >
		select 
			count(ROLE_ID)  
		from 
			ROLE_MF_RELA 
		where  
			MF_ID IN (SELECT MF_ID FROM SYS_MENU_FUN WHERE MENU_ID=#{MENU_ID} )
	</select>
</mapper>